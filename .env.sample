# EduSmart Production Environment Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# SERVICE MODE (REQUIRED)
# =============================================================================
# Options: "api" (paid services) or "local" (free open-source)
SERVICE_MODE=api

# =============================================================================
# AI API KEYS (Required for SERVICE_MODE=api)
# =============================================================================

# OpenAI GPT-4 for script generation
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_key_here

# Stability AI for image generation
# Get your key at: https://platform.stability.ai/account/keys
STABILITY_API_KEY=sk-your_key_here

# ElevenLabs for voice generation
# Get your key at: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_key_here

# Anthropic Claude (optional - not currently used)
ANTHROPIC_API_KEY=

# =============================================================================
# LOCAL AI SERVICES (Required for SERVICE_MODE=local)
# =============================================================================

# Ollama settings (local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# Stable Diffusion settings (local image generation)
STABLE_DIFFUSION_MODEL=runwayml/stable-diffusion-v1-5
IMAGE_INFERENCE_STEPS=25

# Piper TTS settings (local voice)
PIPER_MODEL=en_US-ryan-medium

# =============================================================================
# CACHING (RECOMMENDED)
# =============================================================================

# Enable Redis caching to save API costs and speed up generation
USE_CACHE=true
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=86400

# =============================================================================
# CORS & SECURITY
# =============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=https://edusmart.ign3el.com,http://localhost:3004

# =============================================================================
# FILE STORAGE
# =============================================================================

# Upload directory (inside container)
UPLOAD_DIR=/app/uploads

# Output directory for generated assets
OUTPUT_DIR=/app/outputs

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# DEPLOYMENT INFO
# =============================================================================

# Your domain
DOMAIN=edusmart.ign3el.com

# Backend port (internal)
BACKEND_PORT=8000

# Frontend port (external)
FRONTEND_PORT=3004
