# EduSmart Production Environment Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# SERVICE MODE (REQUIRED)
# =============================================================================
# Options: "api" (paid services) or "local" (free open-source)
SERVICE_MODE=api

# =============================================================================
# AI API KEYS (Required for SERVICE_MODE=api)
# =============================================================================

# Google Gemini API for text generation
# Get your key at: https://ai.google.dev/
GEMINI_API_KEY=your_key_here

# RunPod for FLUX.1-dev image generation (high quality)
# Get your endpoint and key at: https://runpod.ai
RUNPOD_ENDPOINT_ID_FLUX=your_flux_endpoint_id_here
RUNPOD_ENDPOINT_ID_A1111=your_a1111_endpoint_id_here
RUNPOD_KEY=your_runpod_key_here
RUNPOD_SEED=20240601
RUNPOD_MONTHLY_CAP_AED=25
RUNPOD_COST_AED_PER_IMAGE=0.015

# Hugging Face (optional, for fallback image generation)
HF_TOKEN=your_hf_token_here

# =============================================================================
# LOCAL AI SERVICES (Required for SERVICE_MODE=local)
# =============================================================================

# Ollama settings (local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# Stable Diffusion settings (local image generation)
STABLE_DIFFUSION_MODEL=runwayml/stable-diffusion-v1-5
IMAGE_INFERENCE_STEPS=25

# Piper TTS settings (local voice)
PIPER_MODEL=en_US-ryan-medium

# =============================================================================
# CACHING (RECOMMENDED)
# =============================================================================

# Enable Redis caching to save API costs and speed up generation
USE_CACHE=true
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=86400

# =============================================================================
# CORS & SECURITY
# =============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=https://edusmart.ign3el.com,http://localhost:3004

# =============================================================================
# FILE STORAGE
# =============================================================================

# Upload directory (inside container)
UPLOAD_DIR=/app/uploads

# Output directory for generated assets
OUTPUT_DIR=/app/outputs

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# DEPLOYMENT INFO
# =============================================================================

# Your domain
DOMAIN=edusmart.ign3el.com

# Backend port (internal)
BACKEND_PORT=8000

# Frontend port (external)
FRONTEND_PORT=3004
