# ============================================================
# SERVICE CONFIGURATION
# ============================================================
# Choose between 'api' (paid services) or 'local' (free, self-hosted)
SERVICE_MODE=local

# ============================================================
# TEXT GENERATION (AI Screenwriting)
# ============================================================
# LOCAL: Uses Ollama (completely free, runs locally)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral  # Options: mistral, llama2, neural-chat, dolphin-mixtral

# API: Uses OpenAI GPT-4 (paid)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# ============================================================
# IMAGE GENERATION (Scene Illustrations)
# ============================================================
# LOCAL: Uses Stable Diffusion locally via diffusers (free)
STABLE_DIFFUSION_MODEL=runwayml/stable-diffusion-v1-5
IMAGE_INFERENCE_STEPS=25  # Higher = better quality but slower (15-50)
ENABLE_SAFETY_CHECKER=false

# API: Uses Stability AI (paid)
STABILITY_API_KEY=your_stability_api_key_here

# ============================================================
# VOICE GENERATION (Narration & TTS)
# ============================================================
# LOCAL: Uses Piper TTS (completely free, offline)
PIPER_MODEL=en_US-ryan-medium  # Available: ryan-medium, amy-medium, lessac-medium

# API: Uses ElevenLabs (paid)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ============================================================
# CACHING (Avoid regenerating same content)
# ============================================================
USE_CACHE=true
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=86400  # 24 hours in seconds

# ============================================================
# APPLICATION SETTINGS
# ============================================================
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Settings (frontend URLs)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,docx,doc
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs

# Rate Limiting (requests per minute)
RATE_LIMIT=30

