# ============================================================
# SERVICE CONFIGURATION (API-ONLY DEPLOYMENT)
# ============================================================
SERVICE_MODE=api

# ============================================================
# TEXT GENERATION (OpenAI)
# ============================================================
# Get key: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here
# Model options: gpt-4o, gpt-4o-mini (cheaper), gpt-4-turbo
OPENAI_MODEL=gpt-4o

# ============================================================
# IMAGE GENERATION (Stability AI)
# ============================================================
# Get key: https://platform.stability.ai/account/keys
STABILITY_API_KEY=your_stability_api_key_here

# ============================================================
# VOICE GENERATION (ElevenLabs)
# ============================================================
# Get key: https://elevenlabs.io/account/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ============================================================
# CACHING (Recommended to reduce costs)
# ============================================================
USE_CACHE=true
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=86400  # 24 hours in seconds

# ============================================================
# APPLICATION SETTINGS
# ============================================================
APP_ENV=production
DEBUG=False
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Settings (frontend URLs)
# Include your VPS domain
CORS_ORIGINS=https://edusmart.ign3el.com

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,docx,doc
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs

# Rate Limiting (requests per minute)
RATE_LIMIT=30
